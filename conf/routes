# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

#HTML pages
GET     /                           controllers.Application.index()
GET     /mode                       controllers.Application.mode()
GET     /aboutus                    controllers.Application.aboutUs()
GET     /card                       controllers.Application.card()
GET     /donate                     controllers.Application.donate()
GET     /drawing                    controllers.Application.drawing()
GET     /drawing_game               controllers.Application.drawingGame()
#GET     /login                      controllers.Application.login()
#GET     /signup                     controllers.Application.signup()

#Database
#POST    /user                       controllers.DatabaseController.addUser()
#GET     /users                      controllers.DatabaseController.getUsers()
#POST    /user/:id/delete            controllers.DatabaseController.deleteUser(id: Integer)

# Login
GET     /login                      controllers.Application.getUsers()
POST    /login                      controllers.Application.addUser()
POST    /login/:id/delete           controllers.Application.deleteUser(id: Integer)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
