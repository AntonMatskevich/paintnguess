# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

#HTML pages
GET     /                           controllers.Application.index()
GET     /mode                       controllers.Application.mode()
GET     /aboutus                    controllers.Application.aboutUs()
GET     /card                       controllers.Application.card()
GET     /donate                     controllers.Application.donate()
GET     /drawing                    controllers.Application.drawing()
GET     /drawing_game               controllers.Application.drawingGame()
#GET     /signup                     controllers.Application.signup()


# Login
GET     /remove                      controllers.Application.getGamers()
POST    /                            controllers.Application.addGamer()
POST    /remove                      controllers.Application.addGamer()
POST    /remove/:id/delete           controllers.Application.deleteGamer(id: Integer)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
